<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mostro.rangel.budgetmethis.MainMenu">

    <Button
        android:id="@+id/addExpenseButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="312dp"
        android:layout_height="104dp"
        android:layout_marginTop="100dp"
        android:onClick="goToAddExpense"
        android:text="Add Expense"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/summaryButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="goToSummary"
        android:text="Summary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addExpenseButton"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/searchParametersButton"
        android:layout_marginRight="36dp" />

    <Button
        android:id="@+id/searchParametersButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="goToSearchParameters"
        android:text="Search"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addExpenseButton"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/countersButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="24dp"
        android:onClick="goToCounters"
        android:text="Counters"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/searchParametersButton" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="goToSettings"
        android:text="Settings"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/summaryButton"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/countersButton"
        android:layout_marginRight="36dp" />

</android.support.constraint.ConstraintLayout>
